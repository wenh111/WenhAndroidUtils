<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">
  <item android:state_enabled="false" android:state_checked="true">
    <shape>
      <solid android:color="@color/disable"/>
      <corners android:radius="99dp"/>
    </shape>
  </item>
  <item android:state_enabled="false" android:state_checked="false">
    <shape>
      <solid android:color="@color/text_lightest"/>
      <corners android:radius="99dp"/>
      <stroke
        android:width="1.5dp"
        android:color="@color/text_lightest"/>
    </shape>
  </item>
  <item android:state_checked="true">
    <shape>
      <solid android:color="@color/blue"/>
      <corners android:radius="99dp"/>
    </shape>
  </item>
  <item>
    <shape>
      <solid android:color="@color/text_lightest"/>
      <corners android:radius="99dp"/>
      <stroke
        android:width="1.5dp"
        android:color="@color/text_lightest"/>
    </shape>
  </item>
</selector>